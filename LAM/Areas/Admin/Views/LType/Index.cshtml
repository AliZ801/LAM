
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border rounded">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="pl-2">Leave Types</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddType" class="btn btn-primary text-white">
                <i class="fas fa-plus"></i> &nbsp; New Leave Type
            </a>
        </div>
        <hr class="w-75" />
    </div>
    <br />
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Sr. No.</th>
                <th>Leave Type</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/type.js"></script> 
}