
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="border rounded">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="pl-2">Leave List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddLeave" class="btn btn-primary text-white">
                <i class="fas fa-plus"></i> New Leave
            </a>
        </div>
        <hr class="w-75" />
    </div>
    <br />
    <table id="tblData" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Sr. No.</th>
                <th>Type</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/leave.js"></script>
}